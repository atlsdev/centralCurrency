<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include("templates/head", page) %>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous"></script>
	</head>
	<body>
		<div class="nav">
			<% if(user === null) { %>
			<div class="navItem" id="home">Home</div>
			<% } %>
		</div>
		<div class="main">
			<form name="register">
				<span class="errMsg"></span><br>
				<label>EMail:</label><br>
				<label>
					<input type="email" name="email" placeholder="user@example.com">
				</label>
				<br>
				<label>Password:</label><br>
				<label>
					<input type="password" name="password" placeholder="Password">
				</label>
				<br>
				<input type="submit" value="Register">
			</form>
		</div>
		<script defer>
			const qs = s => document.querySelector(s);

			document.forms.register.onsubmit = e => {
				e.preventDefault();

				var email = qs("input[name=\"email\"]").value;
				var password = qs("input[name=\"password\"]").value;

				$.post("/api/users/register", { email, pass: password }, data => {
					console.log(data);
					switch (data.status) {
						case 200:
							location.assign("/");
							break;
						default:
							qs(".errMsg").innerText = data.msg;
							break;
					}
				}, "json");
			}

			qs("#home").onclick = e => {
				location.assign("/");
			}
		</script>
	</body>
</html>